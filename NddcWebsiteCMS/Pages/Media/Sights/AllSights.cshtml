@page
@model NddcWebsiteCMS.Pages.Media.Sights.AllSightsModel
@{
}
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between py-4">
            <h4 class="mb-sm-0">All Sights And Icons</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Sights And Icons</a></li>
                    <li class="breadcrumb-item active">All Sights And Icons</li>
                </ol> 
            </div>

        </div>
    </div>
</div>

<div class="row">
    <div class="">
        <div class="p-3 justify-content-end align-items-center d-flex">
            <div>
                <a href="/Media/Sights/AddSights" type="button" class="btn btn-primary">
                    Create Sights
                </a>
            </div>
        </div><!-- end card-header -->
        <div class="card">
            

                <div class="card-body">
                    @foreach (var item in Model.Sights)
                {
                    <div class="card border-0">
                        <div class="card-body bg-light rounded-4 p-3">
                            <div class="flex-grow-1 ms-3 d-flex justify-content-between">
                                <div class="d-flex align-middle pb-2">
                                    <div class="flex-grow-1 me-3 d-flex justify-content-between">
                                        <img src="@Model._bucketName@item.ImageUrl" class="rounded img-fluid avatar-xl" alt="">
                                    </div>
                                    <div> 
                                        <p class=" fs-14 mb-1">@item.Title</p>
                                        <h6 class="mb-2 fs-12">@item.Summary</h6>
                                        <p class="text-muted fs-12 mb-0">@item.DateAdded <i class="mdi mdi-circle-medium align-middle mx-1"></i>@item.AddedBy</p>
                                    </div>

                                </div>
                                <div class="flex-shrink-0 avatar-xs align-self-center me-5">
                                    <div class="d-flex">
                                        <a asp-page="EditSights" asp-route-Id="@item.Id" class="fs-4 p-0 text-primary btn text-center">
                                            <i class="las la-pen-square"></i>
                                        </a>
                                        <a asp-page="DeleteSights" asp-route-Id="@item.Id" class="fs-4 pt-0 text-danger btn text-center">
                                            <i class="las la-trash-alt"></i>
                                        </a>
                                    </div>
                                </div>
                            </div><!-- end -->
                            </div>
                    </div>
                    }
                </div>
            </div>
        </div>
</div>
