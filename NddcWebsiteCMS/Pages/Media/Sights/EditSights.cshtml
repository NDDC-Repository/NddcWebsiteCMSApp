@page
@model NddcWebsiteCMS.Pages.Media.Sights.EditSightsModel
@{
}
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between py-4">
            <h4 class="mb-sm-0">Add Sights</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Sights</a></li>
                    <li class="breadcrumb-item active">Add Sights</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<div class="row justify-content-center">
    <div class="card col-9 border rounded-4 justify-content-center">
        <div class="card-body">
            <form method="post">
                <div class="row">
                    <div class="col-12">
                        <div class="mb-3">
                            <label for="firstNameinput" class="form-label">Sight Title</label>
                            <input type="text" asp-for="@Model.Sights.Title" class="form-control bg-light border-0" placeholder="Enter Title (75 char.)" id="firstNameinput" maxlength="75">
                        </div>
                    </div><!--end col-->
                    <div class="col-12">
                        <div class="mb-3">
                            <label for="firstNameinput" class="form-label">Sight Summary</label>
                            <textarea type="text" asp-for="@Model.Sights.Summary" class="form-control bg-light border-0" placeholder="Enter Summary (280 char.)" id="firstNameinput" maxlength="280"></textarea>
                        </div>
                    </div><!--end col-->
                    <!--Editor-->
                    <div class="col-12">
                        <div class="mb-3">
                            <label for="citynameInput" class="form-label">Sight Description</label>
                            <textarea type="text" asp-for="@Model.Sights.Details" class="form-control bg-light border-0" placeholder="Enter Description (280 char.)" id="firstNameinput" maxlength="280"></textarea>
                        </div>
                    </div><!--end col-->
                    <div class="col-lg-12">
                        <div class="text-end">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div><!--end col-->
                </div>
            </form>
        </div>
    </div>
</div>