@page
@model NddcWebsiteCMS.Pages.WhoWeAre.MasterPlanModel
@{
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Master Plan</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Master Plan</a></li>
                    <li class="breadcrumb-item active">The Plan</li>
                </ol>
            </div>

        </div>
    </div>
</div>

<div class="row">
    <div class="card col-9">
        <div class="card-body">
            <form action="javascript:void(0);">
                <div class="row">
                    <div class="col-12">
                        <div class="mb-3">
                            <label for="firstNameinput" class="form-label">Plan Title</label>
                            <textarea type="text" class="form-control bg-light border-0" placeholder="THE REGIONAL DEVELOPMENT MASTER PLAN" id="firstNameinput" maxlength="50"></textarea>
                        </div>
                    </div><!--end col-->
                    <div class="col-12">
                        <div class="mb-3">
                            <label for="lastNameinput" class="form-label">Plan Summary</label>
                            <textarea class="form-control bg-light border-0" placeholder="Enter Plan Summary (280 char.)" id="exampleFormControlTextarea5" rows="3" maxlength="280"></textarea>
                        </div>
                    </div><!--end col-->


                    <div class="col-12">
                        <div class="mb-3">
                            <label for="firstNameinput" class="form-label">Featured Quote</label>
                            <textarea type="text" class="form-control bg-light border-0" placeholder="We aspire for the Niger Delta Region to collectively realize its shared vision and shape its future according to the standards it envisions." id="firstNameinput" maxlength="75"></textarea>
                        </div>
                    </div><!--end col-->

                    <div class="col-12">
                        <div class="mb-3">
                            <label for="lastNameinput" class="form-label">Plan Details</label>
                            <textarea class="form-control bg-light border-0" placeholder="Enter Plan Details(280 char.) " id="exampleFormControlTextarea5" rows="3" maxlength="280"></textarea>
                        </div>
                    </div><!--end col-->
                
                    <div class="col-12">
                        <div class="mb-3">
                            <label class="form-label" for="customFile">Add Plan Image (200 x 200 px)</label>
                            <input type="file" class="form-control bg-light border-0" id="customFile" /></div>
                    </div>
                    
                    <div class="col-12">
                        <div class="mb-3">
                            <label class="form-label" for="customFile">Add Featured Benefits Image (200 x 200 px)</label>
                            <input type="file" class="form-control bg-light border-0" id="customFile" /></div>
                    </div>


               
               
                </div>
                <div class="col-lg-12">
                        <div class="text-end">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div><!--end col-->
            </form>
        </div>
    </div>
</div>

