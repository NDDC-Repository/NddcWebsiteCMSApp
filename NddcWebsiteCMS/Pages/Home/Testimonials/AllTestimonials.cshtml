@page
@model NddcWebsiteCMS.Pages.Home.Testimonial.All_TestimonialsModel
@{
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between py-4">
            <h4 class="mb-sm-0">All Testimonials</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Testimonial</a></li>
                    <li class="breadcrumb-item active">All Testimonials</li>
                </ol> 
            </div>

        </div>
    </div>
</div>

<div class="row">
    <div class="">
        <div class="p-3 justify-content-end align-items-center d-flex">
            <div>
                <a href="/Home/Testimonials/AddTestimonial" type="button" class="btn btn-primary">
                    Create Testimonial
                </a>
            </div>
        </div><!-- end card-header -->
    <div class="card">
        <div class="card-body p-4">
            @foreach (var item in Model.Testimonials)
                {
                <div class="card border-0">
                    <div class="card-body bg-light rounded-4 p-3">
                        <div class="d-flex align-middle">
                    @* <div class="flex-shrink-0">
                        <img src="~/images/news/news1.png" class="rounded img-fluid" style="height:100px;" alt="">
                        </div> *@
                        <div class="flex-grow-1 ms-3 d-flex justify-content-between">
                            <div>
                                <p class="text-muted fs-12 mb-1">Testimonial By: <span class="mb-1 fs-14 lh-base">@item.TestimonialBy</span></p>
                                <h6 class="mb-2 fs-12">Customer</h6>
                                <h6 class="mb-1 lh-base">
                                    <a href="#" class="text-reset">
                                    @item.Testimonial
                                    </a>
                                </h6>
                                <p class="text-muted fs-12 mb-0">Date Added: @item.DateAdded </p>
                                <p class="text-muted fs-12 mb-0">Added By: @item.AddedBy</p>

                            </div>
                            <div class="flex-shrink-0 avatar-xs align-self-center me-5">
                                <div class="d-flex">
                                    <a asp-page="EditTestimonial" asp-route-Id="@item.Id" class="fs-4 p-0 text-primary btn text-center">
                                        <i class="las la-pen-square"></i>
                                    </a>
                                    <a asp-page="DeleteTestimonial" asp-route-Id="@item.Id" class="fs-4 pt-0 text-danger btn text-center">
                                        <i class="las la-trash-alt"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            }
       </div>
    </div>
</div>

