@page
@model NddcWebsiteCMS.Pages.Home.Publications.AddPublicationsModel
@{
}


<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between py-4">
            <h4 class="mb-sm-0">Add Publications</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Publications</a></li>
                    <li class="breadcrumb-item active">Add Publications</li>
                </ol> 
            </div>

        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="card col-9 border rounded-4 justify-content-center ">
    <div class="card-body">
        <form action="javascript:void(0);">
            <div class="row">
                <div class="col-12">
                    <div class="mb-3">
                        <label for="firstNameinput" class="form-label">Publications Title</label>
                            <input type="text" asp-for="@Model.Publication.PubTitle" class=" form-control bg-light border-0" placeholder="Enter Publications Title (75 char.)" id="firstNameinput" maxlength="75">
                    </div>
                </div><!--end col-->
                    <div class="col-12">
                        <div class="mb-3">
                            <label for="lastNameinput" class="form-label">Publications Summary</label>
                            <input class="form-control bg-light border-0" asp-for="@Model.Publication.PubSummary"  placeholder="Enter Publications Summary (280 char.)" id="exampleFormControlTextarea5" rows="3" maxlength="280">
                        </div>
                    </div><!--end col-->

                @* <div class="col-12">
                    <div class="mb-3">
                        <label for="lastNameinput" class="form-label">Publication Type</label>
                        <select class="form-select bg-light border-0 mb-3" aria-label="Select Publication Type">
                        <option selected="">News Letter </option>
                        <option value="2">Publication</option>
                    </select>
                    </div>
                </div><!--end col--> *@

                <div class="col-12">
                    <div class="mb-3">
                        <label class="form-label" for="customFile">Add Publication Image  (255 x 165 px)</label>
                            <input type="file" asp-for="@Model.Publication.PubThumbImage"  class="form-control bg-light border-0" id="customFile" />
                        </div>
                </div>
                    <div class="col-12">
                        <div class="mb-3">
                            <label for="basic-url">Upload Publications URL</label>
                            <div class="input-group mb-3">
                                <input type="file" asp-for="@Model.Publication.PubUploadUrl" class="form-control bg-light border-0" id="basic-url" aria-describedby="basic-addon3">
                            </div>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="mb-3">
                            <label for="firstNameinput" class="form-label">Date Uploaded</label>
                            <input type="date" asp-for="@Model.Publication.DateUploaded" class="form-control bg-light border-0" id="firstNameinput">
                        </div>
                    </div><!--end col-->
                    <div class="col-12">
                        <div class="mb-3">
                            <label for="firstNameinput" class="form-label">Uploaded By</label>
                            <input type="text" asp-for="@Model.Publication.UploadedBy" class="form-control bg-light border-0" id="firstNameinput" maxlength="75">
                        </div>
                    </div><!--end col-->
            </div>
            <div class="col-lg-12">
                    <div class="text-end">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div><!--end col-->
        </form>
    </div>
</div>
</div>