@page
@model NddcWebsiteCMS.Pages.Home.NewsPhotoGallery.AddNewsPhotosModel
@{
}
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between py-4">
            <h4 class="mb-sm-0">Add NewsPhotos</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">News Photo Gallery</a></li>
                    <li class="breadcrumb-item active">Add NewsPhotos</li>
                </ol>
            </div>

        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="card col-9 border rounded-4 justify-content-center">
        <div class="card-body">
            <form>
                <div class="row">
                    <div class="col-12">
                        <div class="mb-3">
                            <label class="form-label">Date Added</label>
                            <input type="date" asp-for="@Model.Gallery.DateAdded" class="form-control bg-light border-0" >
                        </div>
                    </div><!--end col-->
                    <div class="col-12">
                        <div class="mb-3">
                            <label for="firstNameinput" class="form-label">Added By</label>
                            <input type="text" asp-for="@Model.Gallery.AddedBy" class="form-control bg-light border-0" placeholder="Enter News Subject(75 char.)" maxlength="75" id="firstNameinput">
                        </div><!--end col-->
                    <div class="col-12">
                        <div class="mb-3">
                            <label class="form-label" for="customFile">Add Image (555 x 525 px)</label>
                            <input type="file" class="form-control bg-light border-0" id="customFile" />
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="text-end">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div><!--end col-->
                </div>
            </form>
        </div>
    </div>
</div>