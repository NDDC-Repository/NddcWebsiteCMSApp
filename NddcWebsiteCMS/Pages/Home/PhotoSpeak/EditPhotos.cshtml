@page
@model NddcWebsiteCMS.Pages.Home.PhotoSpeak.EditPhotosModel
@{
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between py-4">
            <h4 class="mb-sm-0">Edit Photos</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Photos</a></li>
                    <li class="breadcrumb-item active">Edit Photos</li>
                </ol>
            </div>

        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="card col-9 border rounded-4 justify-content-center">
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-12">
                        <div class="mb-3">
                            <label  class="form-label">Photo Title</label>
                            <input type="text" asp-for="@Model.Photo.Title" class="form-control bg-light border-0" placeholder="Enter News Subject(75 char.) " maxlength="75" id="firstNameinput">
                        </div>
                    </div><!--end col-->
                    <div class="col-12">
                        <div class="mb-3">
                            <label for="firstNameinput" class="form-label">Photo Location</label>
                            <input type="text" asp-for="@Model.Photo.Location" class="form-control bg-light border-0" placeholder="Enter News Subject(75 char.)" maxlength="75" id="firstNameinput">
                        </div><!--end col-->

                        <div class="col-12">
                            <div class="mb-3">
                                <input type="text" class="form-control bg-light border-0" asp-for="@Model.Photo.ImageUrl" hidden="true">
                                <label class="form-label" for="customFile">Add Image (555 x 525 px)</label>
                                <input type="file" asp-for="Upload" class="form-control bg-light border-0" id="customFile" />
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="text-end">
                            <button type="submit" class="btn btn-primary">Update</button>
                        </div>
                    </div><!--end col-->
                </div>
            </form>
        </div>
    </div>
</div>


