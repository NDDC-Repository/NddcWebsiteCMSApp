@page
@model NddcWebsiteCMS.Pages.Home.News.AllNewsModel
@{
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">All News</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">News</a></li>
                    <li class="breadcrumb-item active">All News</li>
                </ol> 
            </div>

        </div>
    </div>
</div>

<div class="row">
    <div class="">
    <div class="card">
        <div class="card-header align-items-center d-flex">
            <h4 class="card-title mb-0 flex-grow-1">News Feed</h4>
            <div>
                <a href="/Home/News/AddNews" type="button" class="btn btn-soft-primary btn-sm">
                   Create News
                </a>
            </div>
        </div><!-- end card-header -->

        <div class="card-body">
            @foreach (var item in Model.NewsList)
                {
                    <div class="d-flex align-middle">
                        <div class="flex-shrink-0">
                            <img src="@Model._containerUrl@item.ImageUrl" class="rounded img-fluid" style="height:100px; width:150px" alt="">
                        </div>
                        <div class="flex-grow-1 ms-3 d-flex justify-content-between">
                            <div>
                                <h6 class="mb-1 lh-base">
                                    <a a asp-page="EditNews" asp-route-nid="@item.NID" class="text-reset">
                                       @item.Subject
                                    </a>
                                </h6>
                                <p class="text-muted fs-12 mb-0">@item.PublishDate <i class="mdi mdi-circle-medium align-middle mx-1"></i></p>
                                <p class="text-muted fs-14 mb-0">@item.Summary <i class="mdi mdi-circle-medium align-middle mx-1"></i></p>
                            </div>
                            <div class="flex-shrink-0 avatar-xs align-self-center me-3">
                                <a asp-page="EditNews" asp-route-nid="@item.NID" class="avatar-title bg-light rounded-circle fs-16 text-primary btn ">
                                    <i class="bx bx-dots-horizontal-rounded">Update</i>
                                </a>
                            </div>
                        </div>

                    </div>
                    <br />
                }
          

