@page
@model NddcWebsiteCMS.Pages.Home.Updates.AllUpdatesModel
@{
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">All Updates</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Updates</a></li>
                    <li class="breadcrumb-item active">All Updates</li>
                </ol> 
            </div>

        </div>
    </div>
</div>

<div class="row">
            <div class=" d-flex justify-content-end pb-2">
                <a href="/Home/Updates/AddUpdates" type="button" class="btn btn-soft-primary btn-sm">
                   Add Updates
                </a>
            </div>
    <div class="card">
            <div class=" text-center ">
                <ul class="nav nav-tabs nav-pills nav-justified card-header-tabs mb-3 animation-nav gap-3 p-3" role="tablist">
                    <li class="nav-item" role="presentation">
                        <a class="nav-link active" data-bs-toggle="tab" href="#base-justified-product" role="tab" aria-selected="true">
                            All Updates
                        </a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link" data-bs-toggle="tab" href="#base-justified-home" role="tab" aria-selected="false" tabindex="-1">
                            Physical Infrastructure 
                        </a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link" data-bs-toggle="tab" href="#base-justified-messages" role="tab" aria-selected="false" tabindex="-1">
                            Social Infrastructure
                        </a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link" data-bs-toggle="tab" href="#base-justified-settings" role="tab" aria-selected="false" tabindex="-1">
                            Global Partnerships
                        </a>
                    </li>
                </ul>
                    
            </div><!-- end card-header -->
        <div class="card-body">
            @foreach (var item in Model.Updates)
            {
                <div class="d-flex align-middle">
                    <div class="flex-shrink-0">
                        <img src="@Model._container@item.DescriptionImage" style="height:100px;" alt="">
                    </div>
                    <div class="flex-grow-1 ms-3 d-flex justify-content-between">
                        <div>
                            <h6 class="mb-1 lh-base"><a href="#" class="text-reset">@item.Title </a></h6>
                            <h7 class="mb-1 lh-base">
                                @item.Description
                            </h7>
                            <p class="text-muted fs-12 mb-0">@item.DateAdded <i class="mdi mdi-circle-medium align-middle mx-1"></i>09:22 AM</p>

                        </div>
                        <div class="flex-shrink-0 avatar-xs align-self-center mx-4">
                            <a href="/Home/News/EditNews" class="avatar-title bg-light rounded-circle fs-16 text-primary btn ">
                                <i class="ri-sip-fill"></i>
                            </a>
                        </div>
                    </div>

                </div>

                <!-- end -->
            }
            

            <div class="mt-3 text-center">
                <a href="javascript:void(0);" class="text-muted text-decoration-underline">View
                    all News</a>
            </div>
        </div><!-- end card body -->
    </div><!-- end card -->
</div>
