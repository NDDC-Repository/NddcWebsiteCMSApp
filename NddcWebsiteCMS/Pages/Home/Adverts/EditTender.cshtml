@page
@model NddcWebsiteCMS.Pages.Home.Adverts.EditTenderModel
@{
}
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between py-4">
            <h4 class="mb-sm-0">Add Tenders</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/Home/Adverts/Tenders">Tenders</a></li>
                    <li class="breadcrumb-item active">Add Tenders</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<div class="row justify-content-center">
    <div class="card col-9 border rounded-4 justify-content-center">
        <div class="card-body">
            <form method="post">
                <div class="row">
                    <div class="col-12">
                        <div class="mb-3">
                            <label for="firstNameinput" class="form-label">Project Title</label>
                            <input type="text" class="form-control bg-light border-0" asp-for="@Model.Tender.Title" placeholder=" Enter Title (75 char.)" id="firstNameinput" maxlength="75">
                        </div>
                    </div><!--end col-->
                    <div class="col-12">
                        <div class="mb-3">
                            <label for="firstNameinput" class="form-label">Date of Adverts</label>
                            <input type="date" class="form-control bg-light border-0" asp-for="@Model.Tender.AdvertDate" placeholder=" Enter Advert Date" id="firstNameinput">
                        </div>
                    </div><!--end col-->
                    <div class="col-12">
                        <div class="mb-3">
                            <label for="firstNameinput" class="form-label">Deadline Date</label>
                            <input type="date" class="form-control bg-light border-0" asp-for="@Model.Tender.DeadlineDate" placeholder=" Enter Deadline Date" id="firstNameinput">
                        </div>
                    </div><!--end col-->
                    <div class="col-12">
                        <label for="compnayNameinput" class="form-label">Category</label>
                        <select class="form-select bg-light border-0 mb-3" asp-for="@Model.Tender.Category" aria-label=" Category Type">
                            <option selected="None">Select</option>
                            <option value="Project">Tenders </option>
                            <option value="Program">Adverts</option>
                        </select>
                    </div><!--end col-->
                    <div class="col-12">
                        <div class="mb-3">
                            <label class="form-label" for="customFile">Upload Document</label>
                            <input type="file" asp-for="@Model.Tender.DocumentUrl" class="form-control bg-light border-0" id="customFile" />
                        </div>
                    </div><!--end col-->
                    <!--Editor-->
                    <div class="col-12">
                        <div class="mb-3">
                            <label for="citynameInput" class="form-label">Details</label>
                            <label asp-for="@Model.Tender.Details" id="editor" for="editor"></label>
                        </div>
                    </div><!--end col-->
                    <div class="col-lg-12">
                        <div class="text-end">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div><!--end col-->
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <!--Ck Editor-->
    <script src="https://cdn.ckeditor.com/ckeditor5/40.0.0/classic/ckeditor.js"></script>

    <script>
        ClassicEditor
            .create(document.querySelector('#editor'))
            .catch(error => {
                console.error(error);
            });
    </script>


}