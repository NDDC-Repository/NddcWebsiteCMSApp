@page "{Id:int?}"
@model NddcWebsiteCMS.Pages.Home.Announcements.EditAnnouncementsModel
@{
}
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between py-4">
            <h4 class="mb-sm-0">Add Announcements</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Announcements</a></li>
                    <li class="breadcrumb-item active">Add Announcements</li>
                </ol>
            </div>

        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="card col-9 border rounded-4 justify-content-center">
        <div class="card-body p-4">
            <form method="post">
                <div class="row">
                    <div class="col-12">
                        <div class="mb-3">
                            <label for="firstNameinput" class="form-label">Announcement Title</label>
                            <input type="text" asp-for="@Model.Announcement.Title" class="form-control bg-light border-0" placeholder="Enter Full Name (75 char.)" id="firstNameinput" maxlength="75">
                        </div>
                    </div><!--end col-->
                    <div class="col-12">
                        <div class="mb-3">
                            <label for="firstNameinput" class="form-label">Start Date</label>
                            <input type="date" asp-for="@Model.Announcement.StartDate" class="form-control bg-light border-0" id="firstNameinput">
                        </div>
                    </div><!--end col-->
                    <div class="col-12">
                        <div class="mb-3">
                            <label for="firstNameinput" class="form-label">End Date</label>
                            <input type="date" asp-for="@Model.Announcement.EndDate" class="form-control bg-light border-0" id="firstNameinput">
                        </div>
                    </div><!--end col-->
                    <!--Editor-->
                    <div class="col-12">
                        <div class="mb-3">
                            <label for="citynameInput" class="form-label">Announcement Details</label>
                            <label id="editor" asp-for="@Model.Announcement.Details"></label>
                        </div>
                    </div><!--end col-->
                </div>
                <div class="col-lg-12">
                    <div class="text-end">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div><!--end col-->
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <!--Ck Editor-->
    <script src="https://cdn.ckeditor.com/ckeditor5/40.0.0/classic/ckeditor.js"></script>

    <script>
        ClassicEditor
            .create(document.querySelector('#editor'))
            .catch(error => {
                console.error(error);
            });
    </script>


}